.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  justify-content: space-between;
  box-sizing: border-box;
}

.banner {
  background: #61AFEF;
  color: #fff;
  min-height: 250;
}
.banner .page__desc {
  color: #eee;
}

.list-view {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.list-view scroll-view {
  flex: 1;
}
.list-view .weui-cell:first-child::before {
  display: block;
}
.list-view .weui-cell::before {
  top: auto;
  bottom: 0;
  left: 0;
}

.bottom {
  height: 46px;
}

