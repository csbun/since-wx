<view class="container page">
  <view class="banner page__hd">
    <view class="page__title">List</view>
    <view class="page__desc">列表</view>
  </view>
  <view class="list-view">
    <scroll-view scroll-y>
      <block wx:for="{{eventList}}" wx:for-item="eventItem" wx:key="{{eventItem.id}}">
        <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
          <view class="weui-cell__hd">
            <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
          </view>
          <view class="weui-cell__bd">{{eventItem.title}}</view>
          <view class="weui-cell__bd">
            <text>Since {{eventItem.startDate}}</text>
          </view>
          <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>
      </block>
    </scroll-view>
  </view>
  <view class="bottom weui-btn-area">
    <button type="default" bindtap="onTapAdd">Add</button>
  </view>
</view>
